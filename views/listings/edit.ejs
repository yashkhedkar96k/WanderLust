<% layout("/layouts/boilerplate") %>
<body>
<div class="row mt-3">
    <div class="col-8 offset-2 ">


 

    <h3>Edit this Listings:</h3>
    <form  method="post" action="/listings/<%=listing._id  %>?_method=PUT" >
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" type="text" value="<%=listing.title  %> " class="form-control">
            
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" type="text" class="form-control"><%=listing.description  %> </textarea>

        </div>
       
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" type="text" value="<%=listing.location  %>" class="form-control">

        </div>
        <div class="row">
            
            <div class="mb-3 col-md-4">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" type="text"value="<%=listing.country %>" class="form-control">
    
            </div>

            <div class="mb-3  col-md-8">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" type="number" value="<%=listing.price  %>" class="form-control">
    
            </div>
        </div>
        
        <div class="mb-3">
            <label for="title" class="form-label">Image Url</label>
            <input name="listing[image]" type="text" value="<%=listing.image  %>" class="form-control">

        </div>
        <button class="btn btn-dark edit-btn mt-3">Edit</button>
    </form>
</div>
</div>
</body>
